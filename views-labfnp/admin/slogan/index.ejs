
<table id="slogan-table" class="table table-striped table-bordered table-hover" width="100%">
	<thead>
	<tr>
		<th class="" data-hide="phone">#</th>
		<th class="" data-class="expand"><i class="fa fa-fw fa-slogan text-muted hidden-md hidden-sm hidden-xs"></i>Source</th>
		<th class="" data-hide="phone,tablet">content</th>
		<th class=""></th>
		<th class="no-sort"></th>
	</tr>
	</thead>
	<tbody>
	<tr v-for="slogan in data.items" v-on:click="selection($index)" v-on:dblclick="dblclick($index)">
		<td>{{ slogan.id }}</td>
		<td><a href="/admin/#/admin/slogan/show/{{slogan.id}}">{{ slogan.content }}</a></td>
		<td>{{ slogan.source }}</td>
		<td>{{ slogan.lastLogin }}</td>
		<td align="center" style="cursor: pointer;">
			<div class="row">
				<a class="btn btn-default btn-xs" role="button" v-on:click="show(slogan.id)">
					<i class="fa-fw fa fa-eye text-muted" />
				</a>
				<a class="btn btn-default btn-xs" role="button" v-on:click="edit(slogan.id)">
					<i class="fa-fw fa fa-pencil-square-o text-muted"/>
				</a>
			</div>
		</td>
	</tr>
	</tbody>
</table>


<!-- end widget grid -->
<script type="text/javascript">

	var pagefunction = function() {

		// server only
		var columns = [
			{ "data": "id" },
			{ "data": "content" },
			{ "data": "source" },
			{ "data": "lastLogin" },
			{ "data": null }
		]

		// server only
		var columnDefs = [
			{
				"targets": 'no-sort',
				"orderable": false,
			},
			{
				"searchable": false,
				"targets": 2
			},
			{
				"targets"  : 5,
				"orderable": false,
				"searchable": false,
				"render": function ( data, type, row ) {
					var colBody =
							'<div class="row-action-buttons hidden-xs hidden-sm">'+
							'<a class="btn btn-default btn-xs" role="button" onclick="window.appMain.show('+row.id+')">'+
							'<i class="fa-fw fa fa-eye text-muted" />'+
							'</a>'+
							'<a class="btn btn-default btn-xs" role="button" onclick="window.appMain.edit('+row.id+')">'+
							'<i class="fa-fw fa fa-pencil-square-o text-muted"/>'+
							'</a>'+
							'</div>';
					return colBody;
				}
			},
		]
		var serverSidePaging = <%= (data.serverSidePaging != null)?data.serverSidePaging:false %>;
		<%- include vue.ejs %>
		appMain.$mount("#main-index");
		appMain.loadItems(appMain.renderTable);
	};
</script>
